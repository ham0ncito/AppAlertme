<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/gradientesblancos"
    android:padding="16dp">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="100dp"
    android:orientation="vertical"
    android:background="@drawable/cajitas"
    android:padding="20dp">
    <TextView
        android:id="@+id/txtCorreoAnterior"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/grey"
        android:padding="20dp"
        android:layout_margin="10dp"
        android:text="Correo Actual" />
    <EditText
        android:id="@+id/editTextNewEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/input"
        android:layout_margin="20dp"
        android:padding="20dp"
        android:hint="Correo Electronico nuevo"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/editTextPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/input"
        android:layout_margin="20dp"
        android:padding="20dp"
        android:hint="Contraseña Actual"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/btnChangeEmail"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:background="@drawable/botonredondo"
        android:text="Cambiar Correo Electrónico" />
</LinearLayout>


</LinearLayout>
